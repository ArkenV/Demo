@inherits LayoutComponentBase

<MudLayout>
  <MudAppBar Elevation="1">
    <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@ToggleDrawer" />
    <MudText Typo="Typo.h6" Class="ml-3">ClaimTracker</MudText>
    <MudSpacer />
    <MudIconButton Icon="@Icons.Material.Filled.Notifications" Color="Color.Inherit" Edge="Edge.End" />
    <MudIconButton Icon="@Icons.Material.Filled.AccountCircle" Color="Color.Inherit" Edge="Edge.End" />
  </MudAppBar>
  
  <MudDrawer @bind-Open="@_drawerOpen" Elevation="2">
    <MudDrawerHeader>
      <MudText Typo="Typo.h6">ClaimTracker</MudText>
    </MudDrawerHeader>
    <NavMenu />
  </MudDrawer>
  
  <MudMainContent>
    <MudContainer MaxWidth="MaxWidth.Large" Class="my-4 pt-4">
      @Body
    </MudContainer>
  </MudMainContent>
</MudLayout>

@code
{
  private bool _drawerOpen = true;
  
  private void ToggleDrawer()
  {
    _drawerOpen = !_drawerOpen;
  }
}